            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <RadioButton layoutX="55.0" layoutY="142.0" mnemonicParsing="false" text="mgła">
            <toggleGroup>
                <ToggleGroup fx:id="fall"/>
            </toggleGroup>
        </RadioButton>
